{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": [
    ".env"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "start": {
      "env": [
        "DB_FILE_NAME",
        "BETTER_AUTH_URL",
        "BETTER_AUTH_SECRET"
      ],
      "cache": false,
      "persistent": true
    },
    "push": {
      "env": [
        "DB_FILE_NAME"
      ],
      "inputs": [
        "packages/data/**",
        ".env*"
      ]
    },
    "generate": {
      "env": [
        "DB_FILE_NAME"
      ],
      "inputs": [
        "packages/data/**",
        ".env*"
      ]
    },
    "migrate": {
      "env": [
        "DB_FILE_NAME"
      ],
      "inputs": [
        "packages/data/**",
        ".env*"
      ]
    }
  }
}